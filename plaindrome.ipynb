      "source": [
        "def is_palindrome(s):\n",
        "\n",
        "  s = s.lower().replace(\" \", \"\")\n",
        "\n",
        "  return s == s[::-1]\n",
        "\n",
        "\n",
        "print(is_palindrome(\"racecar\"))\n",
        "print(is_palindrome(\"hello\"))\n",
        "print(is_palindrome(\"Madam, I'm Adam\"))"
      ]
    }
  ]
}